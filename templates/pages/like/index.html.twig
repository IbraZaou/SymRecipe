<div class="p-3">
	<div class="flex">
		{% if app.user %}
			<a class="flex w-fit like-link" href="{{ path('like.recipe', {id: recipe.id}) }}" data-action="like" data-nb={{ recipe.likes|length }}>
			{% endif %}

			<span class="ml-2 like-count" data-recipe-id="{{ recipe.id }}" onclick="toggleColor(this)">{{ recipe.likes|length }}
				J'aime</span>

			{% if app.user %}
			</a>
		{% endif %}
	</div>
</div>

<script>
	function toggleColor(element) {
if (element.style.color === 'green') {
element.style.color = ''; // sets color to default (black)
} else {
element.style.color = 'green';
}
}
</script>
